<%- model_class = @word.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:english) %>:</strong></dt>
  <dd><%= @word.english %></dd>
  <dt><strong><%= model_class.human_attribute_name(:french) %>:</strong></dt>
  <dd><%= @word.french %></dd>
  <dt><strong><%= model_class.human_attribute_name(:locale) %>:</strong></dt>
  <dd><%= @word.locale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lvl1) %>:</strong></dt>
  <dd><%= @word.lvl1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lvl2) %>:</strong></dt>
  <dd><%= @word.lvl2 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              words_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_word_path(@word), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              word_path(@word),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
